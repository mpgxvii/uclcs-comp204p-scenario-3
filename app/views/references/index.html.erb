<div class="container">
  <div class="row">
    <h3>References</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <tr>
            <th> User Id </th>
            <th> Number</th>
            <th> Kind </th>
            <th> Title </th>
            <th> Author </th>
            <th> PubDate </th>
            <th> Notes </th>


          </tr>
          <% @references.each do |reference| %>
          <tr>
          <td><%= reference.userid %></td>
          <td><%= reference.number %></td>
          <td><%= reference.kind %></td>
          <td><%= reference.title %></td>
          <td><%= reference.author %></td>
          <td><%= reference.pubdate %></td>
          <td><%= reference.notes %></td>
          <td><%= link_to 'Show', reference_path(reference) %></td>
          <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
          <td><%= link_to 'Delete', reference_path(reference), method: :delete, data:{confirm: 'Are you sure?'}%></td>

        </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
