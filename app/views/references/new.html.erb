<% provide(:title, 'Sign up') %>
<h1>Add Reference</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for @reference do |f| %>
    <%= render 'shared/error_messages' %>


      <%= f.number_field :number, label: "Reference number", class: 'form-control' %>

<br>

      <%= f.text_field :kind, class: 'form-control' %>


<br>


      <%= f.text_field :title, label: "Article title", class: 'form-control' %>


<br>


      <%= f.text_field :author, class: 'form-control' %>

<br>


      <%= f.date_field :pubdate, label: "Publication date",class: 'form-control' %>

<br>


      <%= f.text_field :userid, label: "User ID",class: 'form-control' %>

<br>

      <%= f.submit "Add Reference", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
